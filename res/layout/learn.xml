<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Activity Detecting App Learning Mode"
    />
    
    
 <TextView 
	android:id="@+id/learnstate" 
    android:layout_width="fill_parent" 
    android:layout_height="50pt"
    android:text="Seclet a Mode then Touch button to start learning!"
    /> 
    

    
 
    
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<Button
				android:id="@+id/wallinglearning"  
				android:text="Walking Learning"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
			/>
			
			<Button
				android:id="@+id/runninglearning"  
				android:text="Running Learning"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
			/>
		</LinearLayout>	
		
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<Button
			android:id="@+id/idle"  
			android:text="Idle Learning"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>
			
			
		</LinearLayout>


		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<Button
			android:id="@+id/upstairslearning"  
			android:text="Up Stairs Learning"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			/>
			
			<Button
				android:id="@+id/downstairslearning"  
				android:text="Down Stairs Learning"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
			/>
		</LinearLayout>
		
	<Button
			android:id="@+id/fftLearn"  
			android:text="FFT Learning Mode"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>

		
			
	<Button
	android:id="@+id/dbLearn"  
	android:text="DB4 WT Learning Mode"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	/>
			
			
	<Button
		android:id="@+id/haarLearn"  
		android:text="Haar WT Learning Mode"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>

	<Button
		android:id="@+id/learnback"  
		android:text="Go to Detecing Mode"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>


</LinearLayout>
